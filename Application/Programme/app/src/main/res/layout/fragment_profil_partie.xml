<?xml version="1.0" encoding="UTF-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="@drawable/pre_home_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/rel1">

            <include layout="@layout/activity_valider_toolbar"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/Gold"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/rel2"
            android:layout_below="@+id/rel1"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/fragment_profil_partie_titre"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="30sp"
                android:textColor="@color/Blanc"
                />

            <TextView
                android:id="@+id/fragment_profil_partie_jeu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_titre"
                android:textColor="@color/Blanc"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                />

            <Button
                android:id="@+id/fragment_profil_partie_jeu_boutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_titre"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/Light_Gold"/>

            <TextView
                android:id="@+id/fragment_profil_partie_difficulte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_jeu_text"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/Black"
                android:text="@string/difficulte"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/fragment_profil_partie_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_jeu_text"
                android:layout_toRightOf="@+id/fragment_profil_partie_difficulte"
                android:layout_toEndOf="@+id/fragment_profil_partie_difficulte"
                android:layout_marginTop="43dp"
                android:entries="@array/DifficultÃ©"
                android:textColor="@color/Black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_profil_partie_joueurs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_spinner"
                android:layout_marginTop="60dp"
                android:textColor="@color/Blanc"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                />

            <Button
                android:id="@+id/fragment_profil_partie_joueurs_boutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_spinner"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/Light_Gold"
                />

            <ListView
                android:id="@+id/fragment_profil_partie_joueurs_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_profil_partie_joueurs_text"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30dp"/>


        </RelativeLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>