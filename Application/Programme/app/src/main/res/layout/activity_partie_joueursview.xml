<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/Gold">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_partie_joueursview_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        app:civ_border_color="@color/Black"
        app:civ_border_width="0.5dp"
        />

    <TextView
        android:id="@+id/activity_partie_joueursview_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/activity_partie_joueursview_image"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/Blanc"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/activity_partie_joueursview_image" />

    <TextView
        android:id="@+id/activity_partie_joueursview_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/activity_partie_joueursview_prenom"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/Blanc"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/activity_partie_joueursview_prenom" />

    <TextView
        android:id="@+id/activity_partie_joueursview_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/activity_partie_joueursview_image"
        android:layout_below="@+id/activity_partie_joueursview_prenom"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/activity_partie_joueursview_image"
        android:layout_marginLeft="20dp" />

    <CheckBox
        android:id="@+id/activity_partie_joueursview_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>

</RelativeLayout>