CREATE TABLE UTILISATEUR (UTILISATEUR_ID INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT, NOM TEXT NOT NULL, PRENOM TEXT NOT NULL, CATEGORIE TEXT NOT NULL, PHOTO BLOB)
CREATE TABLE JEUX (NOM TEXT NOT NULL UNIQUE PRIMARY KEY, DESCRIPTION TEXT NOT NULL, TEMPS INT NOT NULL, IMAGE BLOB)
CREATE TABLE PARTIE (PARTIE_ID INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT, JEUX TEXT NOT NULL REFERENCES JEUX, DIFFICULTE TEXT NOT NULL) 
CREATE TABLE REGLE (REGLE_ID INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT, DETAILS TEXT NOT NULL, DIFFICULTE TEXT NOT NULL)
CREATE TABLE JOUEUR (JOUEUR INTEGER NOT NULL REFERENCES UTILISATEUR, PARTIE INTEGER NOT NULL REFERENCES PARTIE, REGLE INTEGER NOT NULL REFERENCES REGLE)

